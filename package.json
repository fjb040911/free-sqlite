{
  "name": "free-sqlite",
  "displayName": "free sqlite",
  "description": "Free SQLite for VSCode",
  "icon": "assets/logo.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Databases",
    "Notebooks",
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "free-sqlite.view",
        "displayName": "Free SQLite",
        "selector": [
          {
            "filenamePattern": "*.sqlite"
          },
          {
            "filenamePattern": "*.sqlite3"
          },
          {
            "filenamePattern": "*.db"
          },
          {
            "filenamePattern": "*.db3"
          },
          {
            "filenamePattern": "*.sdb"
          },
          {
            "filenamePattern": "*.s3db"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "rebuild-db": "cd node_modules/sqlite3 && npm run rebuild",
    "vsce-package": "npm run rm-map && vsce package",
    "rm-map": "find ui_dist -name '*.map' -delete",
    "rm-his": "rm -r -f .history",
    "mac-package": "npm run rm-his && npm run rm-map && npm run vsce-package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "copy-webpack-plugin": "^13.0.1",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  }
}
